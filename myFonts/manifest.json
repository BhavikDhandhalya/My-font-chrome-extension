{
  "manifest_version": 2,

  "name": "PageFontStyle",
  "description": "This extension changes the font style in a specific page.",
  "version": "1.0",
  "icons": {
  },

  "page_action": {
    "default_popup": "popup.html",
    "default_title": "PageFontStyle"
  },

  "background": {
  },

  "content_scripts":[
    {
      "matches": ["https://ide.geeksforgeeks.org/", "https://practice.geeksforgeeks.org/*"],
      "css": ["content.css"]
    }
  ],

  "permissions": [
    "tabs"
        ]
}